<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_croppocture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="裁剪图片"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/btn_croppocture"
        app:layout_constraintTop_toBottomOf="@+id/btn_croppocture" />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#87ceeb"
        android:max="100"
        android:progress="100"
        android:progressTint="#87ceeb"
        android:thumbTint="#87ceeb"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>